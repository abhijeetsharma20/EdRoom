<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tech.edroomdevs.edroom">
    <!-- users permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EdRoom">
        <activity
            android:name=".activity.doubtcorner.AnswerDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.doubtcorner.AddAnswerActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundAddDoubtAnswerActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.doubtcorner.MyDoubtsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.noticeboard.AddNoticeActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundAddNoticeActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.resources.AddResourcesActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.attendance.EditAttendanceActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.attendance.NewAttendanceActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.attendance.AttendanceTeacherActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundTeacherActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.attendance.AttendanceStudentActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundStudentActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.login_signin.AddTeacherDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundUserInfoActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.home_profile.ProfileActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundProfileActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.doubtcorner.DoubtDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.doubtcorner.AddDoubtActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundAddDoubtActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.doubtcorner.DoubtCornerActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.noticeboard.NoticeDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.login_signin.AddStudentDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundUserInfoActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.login_signin.ForgotActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundForgotActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.login_signin.RegisterActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundRegisterActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.login_signin.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundLoginActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.resources.ResourceActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.noticeboard.NoticeBoardActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.home_profile.HomeActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EdRoom.BackgroundHomeActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.splash_onboarding.OnboardingScreen"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".activity.splash_onboarding.SplashScreenActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="teacherKey"
            android:value="${teacherKey}" />
    </application>

</manifest>